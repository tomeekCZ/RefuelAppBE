{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Flask App",
        "type": "debugpy",
        "request": "launch",
        "module": "flask",
        "env": {
          "FLASK_APP": "app.py",
          "FLASK_ENV": "development",
          "FLASK_DEBUG": "1"
        },
        "args": [
          "run",
          "--no-debugger",
          "--no-reload",
          "--port=8000"
        ],
        "jinja": true
      }
    ]
  }
  